<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="200dp">
    <TextView
        android:background="#f10"
        android:id="@+id/tv_id"
        android:text="1"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="#fff"
        android:layout_width="70dp"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Truong Dinh Chien"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="260 To hien thanh" />

        <TextView
            android:id="@+id/tv_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cheng.cit@gmail.com" />

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0988 9xx 1xx" />
        <TextView
            android:id="@+id/tv_hinhthuc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xuất khẩu" />
        <TextView
            android:id="@+id/tv_loaihang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xoài" />
        <TextView
            android:id="@+id/tv_trongluong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10 tấn" />
        <TextView
            android:id="@+id/tv_ngayxuatcang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12/12/2020" />
        <TextView
            android:id="@+id/tv_ngaynhapcang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12/12/2020" />

    </LinearLayout>
</LinearLayout>